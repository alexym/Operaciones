<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center_horizontal"
tools:context="com.agu.operaciones.MapaActivity">

<fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    class="com.google.android.gms.maps.MapFragment" />
    <!--<fragment-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--class="com.google.android.gms.maps.SupportMapFragment" />-->


<Button
    android:id="@+id/objetivo_boton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:text="Objetivo" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <Button
        android:id="@+id/backbutton_map"
        style="@style/textoNavBar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_atras"
        android:text="@string/atrasButton" />

    <Button
        android:id="@+id/siguiente_boton"
        style="@style/textoNavBar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/siguiente_menu"
        android:text="@string/siguienteButton"
        android:visibility="gone" />
</RelativeLayout>

</RelativeLayout>